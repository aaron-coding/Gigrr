<h2><%= gig.escape("title") %> for $<%= gig.escape("price")%></h2>

<% if (gig.get("creator")) { %>
  <h4>By: <a href="#users/<%= gig.get('creator').id %>"><%= gig.get("creator").username %></a></h4>
<% } %>
  
<img src="<%= gig.get('image_url')%>">
<div class="description">
  <%= gig.escape("description") %>
  <div class="main-gig-extras">
  </div>
</div>
  
<div class="order-button-container"> 
<button class="order-now"> Order Gig ($<span class="gig-final-price"><%= gig.escape("price") %></span>)</button>
</div>